@using TestASP.Web.Areas.Admin.Models.Questionnaire
@using TestASP.Web.TagHelpers;

@addTagHelper *, TestASP.Web

@model AdminQuestionnaireViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    if(Model?.Id > 0)
    {
        ViewBag.Title = "Admin - Update Questionnaire";
    }
    else 
    {
        ViewBag.Title = "Admin - Add Questionnaire";    
    }
}
@if(Model != null)
{
    <form method="post">
        <div class="card">
            <div class="card-header">
                <h2>Add Questionnaire</h2>
            </div>
            <div class="card-body">            
                <BootstrapInput asp-for="Name"/>
                <BootstrapInput asp-for="Description"/>
                <input type="checkbox" onchange="toggle(this,'Content')"/>
                <BootstrapInput hidden asp-for="Content"/>
            </div>
            <div class="card-footer">
                <BootstrapButton size="Small">Save</BootstrapButton>
                <BootstrapButton >Save</BootstrapButton>
                <bootstrap-button>Save</bootstrap-button>
                <BoostrapInput asp-for="asd" />
                <button type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
}

