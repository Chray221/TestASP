@using TestASP.Web.TagHelpers;


@model LoginViewModel
@{
    //for init
    ViewBag.Title = "Login";
}
<form asp-action="Login" asp-controller="Authentication" asp-all-route-data="@(new Dictionary<string,string>(){{"ReturnUrl",ViewBag.ReturnUrl}})" method="post">
    @Html.AntiForgeryToken()
    <div class="container-fluid row mx-auto col-12 col-sm-10 col-md-8 col-lg-6 col-xl-4">
        <div class="px-0 mb-2">
            <BootstrapInput asp-for="Username"/>
        </div>
        <div class="px-0 mb-2">
            <BootstrapInput asp-for="Password" type="password"/>
        </div>
        <span class="text-danger">@ViewBag.ErrorMessage</span>
        <button class="btn btn-primary btn-round" type="submit">Login</button>
    </div>
</form>