@using TestASP.Model;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TestASP.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-6.5.1/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-6.5.1/css/brands.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-6.5.1/css/solid.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TestASP.Web.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("HeadScripts", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TestASP.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (Context.User.Identity?.IsAuthenticated == true && Context.User.IsInRole("admin"))
                        {
                            <li class="nav-item text-dark dropdown">
                                <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Maintenance
                                </a>
                                <ul class="dropdown-menu animate">
                                    <a class="dropdown-item" asp-controller="Maintenance" asp-action="Questionnaire">Questionnaire</a>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#">Add More Here</a></li>
                                </ul>
                            </li>
                        }                               
                        @if (Context.User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown ms-auto">
                                <a class="nav-link dropdown-toggle py-0 me-5 pe-5" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @if(ViewBag.User is UserDto userDto)
                                    {
                                        <img class="rounded-circle" height="40" width="40" src="@userDto.Image" />
                                    }
                                    else
                                    {
                                        <img class="rounded-circle" height="40" width="40" src="https://hs.sbcounty.gov/cn/Photo%20Gallery/_w/Sample%20Picture%20-%20Koala_jpg.jpg" />
                                    }
                                </a>
                                <ul class="dropdown-menu animate">
                                    <li><a class="dropdown-item" asp-controller="User" asp-action="Me">My Profile</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Questionnaire" asp-action="Index">My Questionnaires</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Authentication" asp-action="Logout">Logout</a></li>
                                    @* <a class="dropdown-item" asp-controller="Authentication" asp-action="Logout">Logout else here</a> *@
                                </ul>
                            </li>
                        }
                        else
                        { 
                            <li class="nav-item ms-auto">
                                 <a class="nav-link text-dark" asp-area="" asp-controller="Authentication" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                 <a class="nav-link text-dark" asp-area="" asp-controller="Authentication" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>   
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - TestASP.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
